{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2017",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": false,
        "rootDir": ".",
        "outDir": "build",
        "noImplicitAny": false
    },
    "include": [
        "src/*.ts"
    ]
}